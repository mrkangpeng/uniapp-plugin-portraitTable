.table {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.table .thead {
  border-bottom: 1rpx solid #e5e5e5;
  box-shadow: 5rpx 0 5rpx #eee;
}
.table .thead .title {
  box-sizing: border-box;
  position: relative;
  padding: 0 20rpx;
  min-width: 180rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #e5e5e5;
  border-bottom: none;
  border-right: none;
}
.table .tbody_wrap {
  overflow-x: auto;
  border-right: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.table .tbody_wrap .tbody .col {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.table .tbody_wrap .tbody .row {
  box-sizing: border-box;
  padding: 0 20rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  color: #666;
  min-width: 180rpx;
  height: 88rpx;
  border: 1rpx solid #e5e5e5;
  border-bottom: none;
  border-right: none;
}
.baseBg {
  background-color: #fff;
}
.firstCol {
  background-color: #007AFF;
}

